---
import Layout from "../layouts/Layout.astro";
import { programmingProjectsPageContent } from "../config";
import ProjectCard from "../components/ProgrammingProjectCard.astro";
import SocialLinkBox from "../components/SocialLinkBox.astro";
import { contactPageContent } from "../config";
---

<Layout seo={programmingProjectsPageContent.seo}>
  <section class="mt-10 max-w-2xl mx-auto px-6">
    <h1 class="font-bold text-3xl mb-1">portfolio desarrollo</h1>
    <p class="opacity-60 mb-10">{programmingProjectsPageContent.subtitle}</p>
    <div class="grid grid-cols-1 group">
      {
        programmingProjectsPageContent.projects.map((project) => (
          <ProjectCard {...project} />
        ))
      }
    </div>
  </section>
<section class="mt-10 max-w-2xl mx-auto px-6 sm:flex sm:gap-16">
  <div class="flex mx-auto gap-10">
    <h2 class="opacity-60 my-auto"> m√°s proyectos en </h2>
    <div class="">
      {
          <SocialLinkBox {...contactPageContent.links[2]} />
      }
    </div>
  </div>
</section>
</Layout>
