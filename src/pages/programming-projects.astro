---
import Layout from "../layouts/Layout.astro";
import { programmingProjectsPageContent } from "../config";
import ProjectCard from "../components/ProgrammingProjectCard.astro";
---

<Layout seo={programmingProjectsPageContent.seo}>
  <section class="mt-10 max-w-2xl mx-auto px-6">
    <h1 class="font-bold text-3xl mb-1">Proyectos de Programaci√≥n</h1>
    <p class="opacity-60 mb-10">{programmingProjectsPageContent.subtitle}</p>
    <div class="grid grid-cols-1 group">
      {
        programmingProjectsPageContent.projects.map((project) => (
          <ProjectCard {...project} />
        ))
      }
    </div>
  </section>
</Layout>
