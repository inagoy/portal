---
export function getStaticPaths() {
  return [
    { params: { lang: 'es' } },
    { params: { lang: 'en' } },
  ];
}

import Layout from "../../layouts/Layout.astro";
import { getContactPageContent } from "../../config";
import { normalizeLang, getStrings } from "../../i18n";
import SocialLink from "../../components/SocialLink.astro";
import MailForm from "../../components/MailForm.astro";

const lang = normalizeLang(Astro.params.lang as string);
const t = getStrings(lang);
const contactPageContent = getContactPageContent(lang);
---

<Layout seo={contactPageContent.seo} lang={lang}>
  <section class="mt-10 max-w-2xl mx-auto px-6">
    <h1 class="font-bold text-3xl mb-1">{t.headings.contact}</h1>
    <p class="opacity-60 mb-10">{contactPageContent.subtitle}</p>
  </section>
  <section class="place-content-center max-w-2xl mx-auto px-6 sm:gap-10">
    <MailForm lang={lang}/>
  </section>
  <section class="mt-10 max-w-2xl mx-auto px-6">
    <p class="opacity-60 mb-6">{t.headings.my_networks}</p>
    <ul class="mx-auto max-w-xl flex flex-wrap items-center justify-center sm:justify-between gap-x-6 gap-y-2">
      {
        contactPageContent.links.map((link: any) => (
          <li>
            <SocialLink title={link.title} url={link.url} icon={link.icon} external={link.external} />
          </li>
        ))
      }
    </ul>
  </section>
</Layout>
