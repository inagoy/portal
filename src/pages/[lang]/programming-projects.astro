---
export function getStaticPaths() {
  return [
    { params: { lang: 'es' } },
    { params: { lang: 'en' } },
  ];
}

import Layout from "../../layouts/Layout.astro";
import { getProgrammingProjectsPageContent, getContactPageContent } from "../../config";
import { normalizeLang, getStrings } from "../../i18n";
import ProjectCard from "../../components/ProgrammingProjectCard.astro";
import SocialLink from "../../components/SocialLink.astro";

const lang = normalizeLang(Astro.params.lang as string);
const t = getStrings(lang);
const programmingProjectsPageContent = getProgrammingProjectsPageContent(lang);
const contactContent = getContactPageContent(lang);
---

<Layout seo={programmingProjectsPageContent.seo} lang={lang}>
  <section class="mt-10 max-w-2xl mx-auto px-6">
    <h1 class="font-bold text-3xl mb-1">{t.headings.programming_portfolio}</h1>
    <p class="opacity-60 mb-10">{programmingProjectsPageContent.subtitle}</p>
    <div class="grid grid-cols-1 group">
      {
        programmingProjectsPageContent.projects.map((project: any) => (
          <ProjectCard {...project} />
        ))
      }
    </div>
  </section>
  <section class="mt-10 max-w-2xl mx-auto px-6 sm:flex sm:gap-16">
    <div class="flex items-center gap-4 mx-auto">
      <h2 class="opacity-60">{t.headings.more_projects_on}</h2>
      <SocialLink
        title={contactContent.links[2].title}
        url={contactContent.links[2].url}
        icon={contactContent.links[2].icon}
        external={contactContent.links[2].external}
      />
    </div>
  </section>
</Layout>
