---
import Layout from "../layouts/Layout.astro";
import { musicProjectsPageContent } from "../config";
import ProjectCard from "../components/MusicProjectCard.astro";
---

<Layout seo={musicProjectsPageContent.seo}>
  <section class="mt-10 max-w-2xl mx-auto px-6">
    <h1 class="font-bold text-3xl mb-1">Portfolio m√∫sica/audio</h1>
    <p class="opacity-60 mb-10">{musicProjectsPageContent.subtitle}</p>
    <div class="grid grid-cols-1 group">
      {
        musicProjectsPageContent.projects.map((project) => (
          <ProjectCard {...project} />
        ))
      }
    </div>
  </section>
</Layout>
